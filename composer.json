{
    "require": {
        "slim/slim-skeleton": "^3.1",
        "doctrine/orm": "^2",
        "php": "^7.2",
        "slim/php-view": "^2.2",
        "firebase/php-jwt": "^5.0"
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "autoload": {
        "psr-4": {
            "App\\Controllers\\": "src/Controllers",
            "App\\Entities\\": "src/Entities",
            "App\\Services\\": "src/Services"
        }
    },
    "config": {
        "process-timeout" : 0
    },
    "scripts": {
        "start": "php -S localhost:8080 -t public public/index.php",
        "test": "phpunit"
    }
}
